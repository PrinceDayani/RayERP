# RayERP Environment Configuration Template
# Copy this file to .env and update the values according to your environment

# =============================================================================
# HOST CONFIGURATION
# =============================================================================
# These variables control where services are hosted
FRONTEND_HOST=http://localhost:3000
BACKEND_HOST=http://localhost:5000
API_HOST=http://localhost
API_PORT=5000
DB_HOST=localhost
DB_PORT=27017

# =============================================================================
# BACKEND CONFIGURATION (.env in backend folder)
# =============================================================================

# Database Configuration
MONGO_URI=mongodb://${DB_HOST}:${DB_PORT}/rayerp
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/rayerp

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration - CHANGE THESE IN PRODUCTION
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters
JWT_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGIN=${FRONTEND_HOST}
FRONTEND_URL=${FRONTEND_HOST}

# Logging Configuration
LOG_LEVEL=info

# =============================================================================
# FRONTEND CONFIGURATION (.env in frontend folder)
# =============================================================================

# API Configuration
NEXT_PUBLIC_API_URL=${BACKEND_HOST}
BACKEND_URL=${BACKEND_HOST}
NEXT_PUBLIC_DEFAULT_API_URL=http://localhost:5000

# Socket Configuration
NEXT_PUBLIC_ENABLE_SOCKET=true

# Environment
NODE_ENV=development

# =============================================================================
# DOCKER COMPOSE CONFIGURATION
# =============================================================================
# These variables are used in docker-compose.yml

# Database
MONGO_ROOT_PASSWORD=rayerp123

# JWT Secret for containers
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# For production, override these values:

# FRONTEND_HOST=https://your-frontend-domain.com
# BACKEND_HOST=https://your-api-domain.com
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/rayerp
# NODE_ENV=production
# JWT_SECRET=your-production-jwt-secret
# LOG_LEVEL=warn

# =============================================================================
# USAGE INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env in the root directory
# 2. Copy relevant sections to backend/.env and frontend/.env
# 3. Update the host values according to your deployment environment
# 4. For local development, you can keep the default localhost values
# 5. For production, update all localhost references to your actual domains