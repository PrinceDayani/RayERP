{
  "name": "erp-backend",
  "version": "1.0.0",
  "description": "ERP Backend API",
  "main": "dist/server.js",
  "scripts": {
    "validate-env": "node validate-env.js",
    "dev": "npm run validate-env && nodemon --exec ts-node --transpile-only src/server.ts",
    "dev:fast": "nodemon --exec ts-node --transpile-only --ignore-watch node_modules src/server.ts",
    "build": "npm run validate-env && npm run clean && tsc --skipLibCheck",
    "build:fast": "tsc --skipLibCheck --incremental",
    "build:apprunner": "tsc --skipLibCheck",
    "build:prod": "npm run validate-env && npm run clean && tsc -p tsconfig.prod.json",
    "start": "npm run validate-env && node dist/server.js",
    "start:prod": "NODE_ENV=production npm run validate-env && node dist/server.js",
    "clean": "if exist dist rmdir /s /q dist",
    "build:clean": "npm run clean && npm run build",
    "dev:debug": "npm run validate-env && nodemon --inspect --exec ts-node --transpile-only src/server.ts",
    "seed": "npm run validate-env && ts-node --transpile-only scripts/seed.ts",
    "seed:accounts": "npm run validate-env && node scripts/seedChartOfAccounts.js",
    "seed:roles": "npm run validate-env && ts-node --transpile-only scripts/migrateToRoles.ts",
    "migrate:roles": "npm run validate-env && ts-node --transpile-only scripts/migrateToRoles.ts",
    "preinstall": "npx only-allow npm"
  },
  "dependencies": {
    "@types/compression": "^1.8.1",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/winston": "^2.4.4",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.1",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.0.3",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^6.11.2",
    "express-validator": "^7.3.0",
    "file-saver": "^2.0.5",
    "helmet": "^7.0.0",
    "ical-generator": "^10.0.0",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.3",
    "mongoose": "^7.2.0",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.10",
    "pdfkit": "^0.13.0",
    "sharp": "^0.34.5",
    "socket.io": "^4.8.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/archiver": "^6.0.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-validator": "^2.20.33",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.3",
    "@types/pdfkit": "^0.12.9",
    "@types/sharp": "^0.31.1",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint": "^8.41.0",
    "node-cache": "^5.1.2",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.2"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.3"
  },
  "engines": {
    "node": "22.x",
    "npm": ">=10.0.0"
  },
  "volta": {
    "node": "22.11.0",
    "npm": "10.9.0"
  }
}
