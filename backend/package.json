{
  "name": "erp-system-backend",
  "version": "1.0.0",
  "description": "ERP System Backend",
  "type": "commonjs",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc --skipLibCheck",
    "dev": "nodemon --exec ts-node src/server.ts",
    "clean": "rm -rf dist",
    "build:clean": "npm run clean && npm run build",
    "build:prod": "npm run clean && npm run build && npm run validate",
    "dev:debug": "nodemon --inspect --exec ts-node src/server.ts",
    "seed": "node scripts/seedTestData.js",
    "seed:accounts": "node scripts/seedChartOfAccounts.js",
    "test": "echo \"Backend tests not implemented yet\" && exit 0",
    "test:watch": "echo \"Backend test watch not implemented yet\" && exit 0",
    "lint": "eslint src --ext .ts,.js --fix",
    "lint:check": "eslint src --ext .ts,.js",
    "validate": "node -e \"console.log('Validating build...'); require('./dist/server.js'); console.log('âœ… Build validation passed');\"",
    "health-check": "curl -f http://localhost:5000/api/health || exit 1",
    "start:prod": "NODE_ENV=production npm start",
    "docker:build": "docker build -t rayerp-backend .",
    "docker:run": "docker run -p 5000:5000 rayerp-backend"
  }
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.21.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.2.0",
    "multer": "^2.0.2",
    "socket.io": "^4.8.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint": "^8.41.0",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": "22.x",
    "npm": ">=10.0.0"
  }
}
