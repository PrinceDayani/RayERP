{
  "name": "erp-system-backend",
  "version": "1.0.0",
  "description": "ERP System Backend",
  "type": "commonjs",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc --skipLibCheck",
    "build:prod": "tsc -p tsconfig.prod.json",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "clean": "rm -rf dist",
    "build:clean": "npm run clean && npm run build",
    "dev:debug": "nodemon --inspect --exec ts-node src/server.ts",
    "seed": "ts-node scripts/seed.ts",
    "seed:accounts": "node scripts/seedChartOfAccounts.js",
    "seed:roles": "ts-node scripts/migrateToRoles.ts",
    "migrate:roles": "ts-node scripts/migrateToRoles.ts"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.21.2",
    "express-rate-limit": "^6.11.2",
    "express-validator": "^7.3.0",
    "file-saver": "^2.0.5",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.3",
    "mongoose": "^7.2.0",
    "multer": "^2.0.2",
    "sharp": "^0.34.5",
    "socket.io": "^4.8.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.3",
    "@types/pdfkit": "^0.12.9",
    "@types/sharp": "^0.31.1",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint": "^8.41.0",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.2"
  },
  "engines": {
    "node": "22.x",
    "npm": ">=10.0.0"
  }
}
